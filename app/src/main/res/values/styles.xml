<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text style for TextViews -->
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/imageViewProfile</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Style for common buttons -->
    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/textViewDocumentType</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- Style for the "Approve" button -->
    <style name="ApproveButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/buttonViewDocument</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">Approve</item>
        <item name="android:backgroundTint">@color/colorApprove</item>
    </style>

    <!-- Style for the "Reject" button -->
    <style name="RejectButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/buttonApprove</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:text">Reject</item>
        <item name="android:backgroundTint">@color/colorReject</item>
    </style>


    <style name="GrayText">
        <item name="android:textColor">#808080</item>
    </style>

    <!-- Modify TextView for clickable link -->
    <style name="LinkText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/imageViewProfile</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#0000FF</item>
    </style>


</resources>